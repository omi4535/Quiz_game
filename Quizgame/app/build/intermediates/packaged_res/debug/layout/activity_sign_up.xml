<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".login.Sign_up">

    <TextView
        android:id="@+id/tttt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/font_login"
        android:text="Sign UP"
        android:textColor="#5982F4"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tttttt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/font_login"
        android:text="Email"
        android:textColor="#6D92F8"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tttt" />

    <EditText
        android:id="@+id/sign_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:hint="Enter Your Email"
        android:inputType="textEmailAddress"
        android:textColor="#6F94F6"
        android:textColorHint="#A0A1A5"
        app:layout_constraintEnd_toEndOf="@+id/sign_pass"
        app:layout_constraintStart_toStartOf="@+id/tttttt"
        app:layout_constraintTop_toBottomOf="@+id/tttttt" />

    <TextView
        android:id="@+id/ttt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="38dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/font_login"
        android:text="Confirm Password"
        android:textColor="#6D92F8"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_pass" />

    <EditText
        android:id="@+id/sign_pass"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="32dp"
        android:hint="Enter Your Password"
        android:textColor="#6F94F6"
        android:textColorHint="#A0A1A5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tt" />


    <TextView
        android:id="@+id/tt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="43dp"
        android:layout_marginTop="39dp"
        android:fontFamily="@font/font_login"
        android:text="Password"
        android:textColor="#6D92F8"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_email" />

    <EditText
        android:id="@+id/confirm_pass"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="27dp"
        android:hint="Confirm Password"
        android:textColor="#6F94F6"
        android:textColorHint="#A0A1A5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ttt" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sign_up_button"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:background="#F4E7F8"
        android:fontFamily="@font/font_login"
        android:text="Sign Up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_pass" />
    <ProgressBar
        android:id="@+id/progresbar"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:background="#F4E7F8"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_pass" />

    <TextView
        android:id="@+id/warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="18dp"
        android:text=""
        android:textColor="#FD3503"
        app:layout_constraintStart_toStartOf="@+id/confirm_pass"
        app:layout_constraintTop_toBottomOf="@+id/confirm_pass" />


</androidx.constraintlayout.widget.ConstraintLayout>